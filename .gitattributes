*.DOT                               diff=astextplain
*.pdf                               diff=astextplain
*.PDF                               diff=astextplain
*.rtf                               diff=astextplain
*.RTF                               diff=astextplain
*.md                    text
*.tex                   text        diff=tex
*.adoc                  text
*.textile               text
*.csv                   text
*.tab                   text
*.tsv                   text
*.txt                   text
*.ipynb                 text
*.markdown              text
*.md                    text
*.mdwn                  text
*.mdown                 text
*.mkd                   text
*.mkdn                  text
*.mdtxt                 text
*.mdtext                text
AUTHORS                 text
CHANGELOG               text
